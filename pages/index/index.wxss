/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}


text {
  word-wrap: break-word;
  word-break: normal;
}

.down {
  width: 90%;
}

.top {
  width: 100%;
  height: 40%;
  background-color: white;
  position: fixed;
  bottom: 0;
  left: 0;
}

.placeholder-view {
  width: 100%;
  height: 1000rpx;
}

.border {
  width: 100%;
  height: 3px;
  background-color: black
}

.dateView {
  width: 100%;
  height: 50px;
  border: 3rpx solid gray;
  border-radius: 10rpx;
  padding: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}